{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": ".",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "isolatedModules": true,
    "incremental": true,
    "target": "es2020",
    "types": [
      "node",
      "react",
      "hast"
    ], // Correct placement of 'types' field
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    ".next/types/**/*.ts",
    "pages/utils/product.js",
    "pages/product/[...slug].tsx",
    "sanity-migration/importData.cjs",
    "tailwind.config.ts",
    "src/**/*"
, "sanity-migration/sanityClient.cjs", ".next/layout.tsx"  ],
  "exclude": [
    "node_modules"
  ]
}
